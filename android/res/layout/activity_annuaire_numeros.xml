<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_annuaire_numeros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:context="com.polytech.nuitdelinfo.iiioexception.com.polytech.nuitinfo.AnnuaireNumeros">

    <ImageButton
        android:id="@+id/backAnnuaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:text="Annuaire Num. Importants"
        android:layout_height="50dp"
        android:textAlignment="center"
        />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/numAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Personne:Num" />

        <ImageButton
            android:id="@+id/numAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add" />

    </TableRow>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/numsAnnu"
        android:background="#d6d7d7"
        android:divider="@android:color/background_dark"
        android:dividerHeight="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>
