<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingEnd="15dp">

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:id="@+id/imageView2"
        android:layout_height="35dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />


    <ImageView
        android:layout_height="5dp"
        app:srcCompat="@android:color/holo_red_light"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView8"
        android:layout_width="300dp"
        android:layout_gravity="center" />

    <Button
        android:text="Série 1"
        android:layout_width="match_parent"
        android:layout_marginTop="73dp"
        android:id="@+id/serie1"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        style="@android:style/Widget.Button"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <Button
        android:text="Série 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serie1"
        android:layout_alignLeft="@+id/serie1"
        android:layout_alignStart="@+id/serie1"
        android:layout_marginTop="32dp"
        android:id="@+id/serie2"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        style="@android:style/Widget.Button"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_gravity="center"/>

    <Button
        android:text="Série 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serie2"
        android:layout_alignRight="@+id/serie2"
        android:layout_alignEnd="@+id/serie2"
        android:layout_marginTop="32dp"
        android:id="@+id/serie3"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        style="@android:style/Widget.Button"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_gravity="center"/>


</LinearLayout>